<?xml version="1.0" encoding="UTF-8"?>
<launch>
	<arg name="x" default="0.0" />
    	<arg name="y" default="0.0" />
    	<arg name="z" default="0.0" />

	<arg name="robot_name" default="finder" />

	<!-- Converts the xacro robot information to UDRF and use it as a robot_description parameter -->
	<param name="robot_description" command="$(find xacro)/xacro '$(find finder_description)/robot/finder_base_4w.urdf.xacro'" />


	<!-- push robot_description to factory and spawn robot in gazebo -->
   <node name="urdf_spawner"
		 pkg="gazebo_ros"
		 type="spawn_model"
		 respawn="false"
		 output="screen"
    	 args="-urdf -x $(arg x) -y $(arg y) -z $(arg z) -model $(arg robot_name) -param robot_description"/>

</launch>
